<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.him.retrofit2_pet_project.activity.MainActivity">


    <EditText
        android:id="@+id/lat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="178dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Latitude" />

    <EditText
        android:id="@+id/lng_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lat_text"
        android:layout_alignStart="@+id/lat_text"
        android:layout_below="@+id/lat_text"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Longitude" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lng_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="Get data" />

    <TextView
        android:id="@+id/sunrise"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:hint="Sunrise" />

    <TextView
        android:id="@+id/sunset"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/sunrise"
        android:layout_alignStart="@+id/sunrise"
        android:layout_below="@+id/sunrise"
        android:gravity="center"
        android:hint="Sunset"
        android:textAlignment="center"
        android:textSize="20sp" />
</RelativeLayout>
